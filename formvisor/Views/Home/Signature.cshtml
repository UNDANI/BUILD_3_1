<script type="text/javascript">

    var UrlTemplate= '@System.Configuration.ConfigurationManager.AppSettings["UrlTemplate"]';
    var UrlSignature= '@System.Configuration.ConfigurationManager.AppSettings["UrlSignature"]';
    var EnvironmentId= '@System.Configuration.ConfigurationManager.AppSettings["EnvironmentId"]';
    var UrlFormApi= '@System.Configuration.ConfigurationManager.AppSettings["UrlFormApi"]';

    $(document).ready(function () {
        var formSignature = $('#signature').uFormSignature({
            host: UrlSignature,
            token: '',
            environmentId: EnvironmentId,
            instanceId: form.attr("data-instance-id"),
            publicKey: 'publicKey',
            privateKey: 'privateKey',
            password: 'password'
        });

        $('#signFormInstance').click(function () {
            if ($('#password').val() !== '' && $('#publicKey').val() !== '' && $('#privateKey').val() !== '' ) {
                formSignature.Sign();
            } else {
                alert("Favor de ingresar los datos requeridos...");
            }
        });

        $('#cancelSignature').click(function() {
            updateReadOnly();

        });

        $(formSignature).on("starting", function (event) {
            $('#waitSignature').show();
            $('#signFormInstance').prop('disabled', true);
            $('#cancelSignature').prop('disabled', true);
        });

        $(formSignature).on("done", function (event, n, r, c) {
            $.ActionExecuteFlow();
            alert("El tramite se envió correctamente. En breve recibirá su acuse de recepción");
            window.location.href =  "@ViewBag.Parameters.urlBaseAseaPortalReg" + "/management-regulated";
        });

        $(formSignature).on("error", function (event, origen, error) {
            $('#btnIniciarSesion').removeAttr('disabled');            
            alert("Error al firmar, por favor vuelva a intentarlo (" + origen + ").");
            $('#waitSignature').hide();
            $('#signFormInstance').prop('disabled', false);
            $('#cancelSignature').prop('disabled', false);
        });

        var updateReadOnly = function () {
            var settings = {
                "async": false,
                "crossDomain": true,
                "url": UrlFormApi +
                    "/Execution/Form/updateReadOnly?instaceId=" + form.attr("data-instance-id") + "&readOnly=false",
                "method": "POST",
                "content-type": "application/json",
                "cache-control": "no-cache"
            };

            $.ajax(settings).done(function (response) {
                console.log("se actualiza ReadOnly");
            }).fail(function (jqXhr, textStatus, errorThrown) {
                console.log("Error al actualizar el flujo");
            });
        }
    });
</script>
<div id="signature" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" data-rfc="" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Firma electrónica</h4>
        </div>
        <div class="modal-content">
            <!-- Form inside modal -->
            <div class="content">
                <form action="Signature.cshtml" role="form" onsubmit="return false">
                    <div class="modal-body">
                        <input type="hidden" id="txtContenido" name="txtContenido">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Contraseña FIEL*:</label>
                                    <input id="password" name="password" type="password" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Archivo .cer*: </label>
                                    <input id="publicKey" name="publicKey" type="file" class="styled" accept=".cer,.cert" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Archivo .key*: </label>
                                    <input id="privateKey" name="privateKey" type="file" class="styled" accept=".key" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span id="waitSignature" class="pull-left" style="display: none;"><img src="" style="margin-right: 4px;"> Generando su acuse, espere ...</span>
                        <button id="cancelSignature" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button id="signFormInstance" type="submit" class="btn btn-success">Firmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

